@model Ecommerce_Gamestop.Models.PagoViewModel

@{
    ViewData["Title"] = "GameStop - Proceso de Pago";
    Layout = "~/Views/Shared/LayoutMaster.cshtml";
}

<h2>Proceso de Pago</h2>
<p style="color:whitesmoke;">Ingrese sus datos y recuerde almacenar su boleta para seguridad</p>

<form asp-action="ProcesarPago" method="post" class="w-100" novalidate>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="NombreTitular" class="form-label"></label>
            <input asp-for="NombreTitular" class="form-control" />
            <span asp-validation-for="NombreTitular" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="NumeroTarjeta" class="form-label"></label>
            <input asp-for="NumeroTarjeta" class="form-control" placeholder="1111-2222-3333-4444" />
            <span asp-validation-for="NumeroTarjeta" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="FechaExp" class="form-label"></label>
            <input asp-for="FechaExp" class="form-control" placeholder="MM/AA" />
            <span asp-validation-for="FechaExp" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="CVV" class="form-label"></label>
            <input asp-for="CVV" class="form-control" placeholder="123" />
            <span asp-validation-for="CVV" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3 d-flex align-items-end">
            <div class="form-check">
                <input asp-for="GenerarPDF" class="form-check-input" checked="checked" />
                <label asp-for="GenerarPDF" class="form-check-label" type="hidden">Descargar boleta automáticamente</label>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Pagar</button>
        <a asp-controller="Carrito" asp-action="Index" class="btn btn-secondary ms-2">Volver al carrito</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

