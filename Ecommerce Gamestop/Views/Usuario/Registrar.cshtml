@model Ecommerce_Gamestop.Models.UsuarioRegistro

@{
    ViewData["Title"] = "Registrar";
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
}

<h1 class="text-center text-white">Registrar</h1>

<hr />
<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="col-md-6 bg-dark p-4 rounded shadow">
        <h2 class="text-center text-white mb-4">Crear Cuenta</h2>
        <form asp-action="Registrar" method="post" enctype="multipart/form-data" class="p-4 shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="control-label text-white"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Apellido" class="control-label text-white"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Correo" class="control-label text-white"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Contrasenia" class="control-label text-white">Ingrese su Contraseña</label>
                <input asp-for="Contrasenia" class="form-control" type="password" />
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmarContrasenia" class="control-label text-white">Confirmar Contraseña</label>
                <input asp-for="ConfirmarContrasenia" class="form-control" type="password" />
                <span asp-validation-for="ConfirmarContrasenia" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Telefono" class="control-label text-white"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Direccion" class="control-label text-white"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Imagen" class="form-label">Foto de perfil</label>
                <input type="file" asp-for="Imagen" class="form-control" />
            </div>

            <div class="text-end" style="text-align:center;">
                <button type="submit" class="btn btn-danger px-4">Registrar</button>
                <a asp-action="Login" class="btn btn-secondary">Volver a Inicio de Sesión</a>
            </div>

        </form>

    </div>
</div>

<br />
<br />
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
