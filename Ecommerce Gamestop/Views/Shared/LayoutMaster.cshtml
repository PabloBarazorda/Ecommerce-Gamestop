<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Estilos.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/img/gamestop-icon.png" />

    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #111; /* Fondo negro gamer */
            color: #f5f5f5; /* Texto blanco humo */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        header img.logo {
            position: absolute; /* Para poder posicionarlo */
            top: 5px; /* Separación del borde superior */
            left: 5px; /* Separación del borde izquierdo */
            width: 90px; /* Ajusta tamaño según necesites */
            height: auto;
            z-index: 1000; /* Para que quede por encima de otros elementos */
        }

        nav .menu {
            background-color: #000; /* Negro sólido para menú */
            padding: 20px 0; /* Más alto */
            text-align: center;
            font-size: 1.2rem; /* Aumenta tamaño del texto */
            font-weight: bold; /* Resalta un poco más */
        }

        nav .menu-item {
            color: #f5f5f5;
            margin: 0 15px;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s;
        }

            nav .menu-item:hover {
                color: #ff0000; /* Rojo al pasar mouse */
            }

        footer {
            background-color: #1c1c1c; /* gris oscuro */
            color: #f5f5f5;
            margin-top: auto;
        }

        .footer-rs a img.rs {
            width: 40px;
            height: 40px;
            margin: 0 5px;
            filter: brightness(1.2);
            transition: transform 0.2s;
        }

            .footer-rs a img.rs:hover {
                transform: scale(1.2);
                filter: brightness(1.5);
            }

        footer div {
            text-align: center;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <a asp-controller="Home" asp-action="Index">
        <header>
            <img class="logo" src="~/img/GameStop-logo.png" />
        </header>
    </a>

    
    @{
        /* Accedemos al login de controlador usuario */
        var usuarioID = Context.Session.GetInt32("UsuarioID");
        var nombreUsuario = Context.Session.GetString("NombreUsuario");
        var imagenUsuario = Context.Session.GetString("ImagenUsuario");
    }



    <nav menu d-flex justify-content-between align-items-center px-4>
        <div class="menu">
            <a asp-controller="Home" asp-action="Index" class="menu-item">Bienvenida</a>
            <a asp-controller="Productos" asp-action="Index" class="menu-item">Productos</a>
            <a asp-controller="Nosotros" asp-action="Index" class="menu-item">Nosotros</a>
            <a asp-controller="Accesorios" asp-action="ListarAdopciones" class="menu-item">Accesorios</a>
            <a asp-controller="Mail" asp-action="Correo" class="menu-item">Contáctanos</a>

        </div>
    </nav>



    <div class="user-menu position-fixed top-0 end-0 m-3 p-2 d-flex align-items-center gap-2"
         style="background-color: #000; border-radius: 10px; z-index:2000;">
        @if (usuarioID != null)
        {
            <span class="text-white fw-bold">Hola, @nombreUsuario</span>
            <div class="dropdown">
                @{
                    // Usamos la ruta correcta para Razor
                    var rutaImagen = string.IsNullOrEmpty(imagenUsuario)
                    ? Url.Content("~/img/gray-user-profile-icon-png-fP8Q1P.png")
                    : Url.Content($"~/img/usuarios/{imagenUsuario}");
                }
                <img src="@rutaImagen" class="dropdown-toggle rounded-circle"
                     id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false"
                     style="width:45px; height:45px; cursor:pointer;" />
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Editar">Perfil</a></li>
                    <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Logout">Cerrar sesión</a></li>
                </ul>
            </div>
        }
        else
        {
            <a asp-controller="Usuario" asp-action="Login">
                <img src="~/img/gray-user-profile-icon-png-fP8Q1P.png"
                     class="dropdown-toggle rounded-circle"
                     style="width:45px; height:45px; cursor:pointer;" />
            </a>
        }
    </div>


    <div class="container mt-4">
        @RenderBody()
    </div>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <footer class="footer mt-auto py-0 text-center text-light">
        <div>
            <div style="align-items:center">
            <img src="~/img/GameStop-logo.png" alt="Imagen no Encontrada" style="width: 120px; height: auto; margin-bottom: 10px;" />
            </div>

            Tienda oficial de videojuegos y accesorios en Latinoamerica<br />
            Todos los derechos reservados <br />
            Correo: administracion@gamestop.pe
        </div>
        <div>
            nuestras redes
        </div>
        <br />
        <div class="footer-rs">
            <a href="https://www.facebook.com/GameStop" target="_blank">
                <img src="~/img/facebook.png" class="rs" />
            </a>
            <a href="https://www.instagram.com/gamestop" target="_blank">
                <img src="~/img/instagram.png" class="rs" />
            </a>
            <a href="https://x.com/gamestop" target="_blank">
                <img src="~/img/x white.png" class="rs" />
            </a>
            <a href="https://www.tiktok.com/@@gamestopofficial?lang=es" target="_blank">
                <img src="~/img/tiktok.png" class="rs" />
            </a>
        </div>
        <br />
        <div>
            © 2025 GameStop Perú. Todos los derechos están reservados.
        </div>
        <div> Hecho por Pablo Barazorda</div>
        <br />
        <br />
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false);
</body>
</html>

