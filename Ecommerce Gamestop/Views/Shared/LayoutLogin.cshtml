<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Estilos.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/img/gamestop-icon.png" />

    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-size: cover;
        }


        header img.logo {
            position: absolute; /* Para poder posicionarlo */
            top: 5px; /* Separación del borde superior */
            left: 5px; /* Separación del borde izquierdo */
            width: 90px; /* Ajusta tamaño según necesites */
            height: auto;
            z-index: 1000; /* Para que quede por encima de otros elementos */
        }

        nav .menu {
            background-color: #000; /* Negro sólido para menú */
            padding: 10px 0;
            text-align: center;
        }

        nav .menu-item {
            color: #f5f5f5;
            margin: 0 15px;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s;
        }

            nav .menu-item:hover {
                color: #ff0000; /* Rojo al pasar mouse */
            }

        footer {
            background-color: #1c1c1c; /* gris oscuro */
            color: #f5f5f5;
        }

        .footer-rs a img.rs {
            width: 40px;
            height: 40px;
            margin: 0 5px;
            filter: brightness(1.2);
            transition: transform 0.2s;
        }

            .footer-rs a img.rs:hover {
                transform: scale(1.2);
                filter: brightness(1.5);
            }

        footer div {
            text-align: center;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100"
      style="background: url('@Url.Content("~/img/background-gif.gif")') no-repeat center center fixed; background-size: cover;">
    <a asp-controller="Home" asp-action="Index">
        <header>
            <img class="logo" src="~/img/GameStop-logo.png" />
        </header>
    </a>

    <nav>
        <div class="menu" style="color:white">
            Potenciado por Gamestop Perú, tu zona de diversión
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center mt-5">
        <div>
            <strong>GameStop PE</strong><br />
            Tienda oficial de videojuegos y accesorios en Latinoamerica<br />
            Todos los derechos reservados <br />
            Correo: administracion@gamestop.pe
        </div>
        <div>
            nuestras redes
        </div>
        <br />
        <div class="footer-rs">
            <a href="https://www.facebook.com/GameStop" target="_blank">
                <img src="~/img/facebook.png" class="rs" />
            </a>
            <a href="https://www.instagram.com/gamestop" target="_blank">
                <img src="~/img/instagram.png" class="rs" />
            </a>
            <a href="https://x.com/gamestop" target="_blank">
                <img src="~/img/x white.png" class="rs" />
            </a>
            <a href="https://www.tiktok.com/@@gamestopofficial?lang=es" target="_blank">
                <img src="~/img/tiktok.png" class="rs" />
            </a>
        </div>
        <div>
            © 2025 GameStop Perú. Todos los derechos están reservados.
        </div>
        <div> Hecho por Pablo Barazorda</div>
        <br />
        <br />
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false);
</body>
</html>
