@{
    ViewData["Title"] = "Gamestop - Bienvenida";
    Layout = "~/Views/Shared/LayoutMaster.cshtml";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-5">

    <!-- Carrusel de videojuegos -->
    <div id="videoGameCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#videoGameCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#videoGameCarousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#videoGameCarousel" data-bs-slide-to="2"></button>
            <button type="button" data-bs-target="#videoGameCarousel" data-bs-slide-to="3"></button>
        </div>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/Super-Mario-Galaxy-add.png" class="d-block w-100 carousel-img" alt="Imagen no Encontrada">
            </div>
            <div class="carousel-item">
                <img src="~/img/carrusel-addon(2).png" class="d-block w-100" alt="Imagen no Encontrada">
            </div>
            <div class="carousel-item">
                <img src="~/img/Sonic-CW-addon.png" class="d-block w-100" alt="Imagen no Encontrada">
            </div>
            <div class="carousel-item active">
                <img src="~/img/Minecraft-addon.png" class="d-block w-100" alt="Imagen no Encontrada">
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#videoGameCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#videoGameCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>

    <!-- Cartillas de videojuegos -->
    <div class="row mt-5">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/img/videojuegos-index.jpg" class="card-img-top" alt="Cartilla 1">
                <div class="card-body">
                    <h5 class="card-title">¡Conoce los últimos lanzamientos!</h5>
                    <p class="card-text">No te pierdas de los nuevos videojuegos del mes, visita nuestro catálogo de productos para informarte de los últimos lanzamientos.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/img/consolas-index.jpg" class="card-img-top" alt="Cartilla 2">
                <div class="card-body">
                    <h5 class="card-title">¿No cuentas con una consola?¡Cómpralo aquí, con tan solo unos clicks!</h5>
                    <p class="card-text">Visita nuestro apartado de accesorios para averiguar las nuevas consolas que contamos para ti.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/img/customer-index.png" class="card-img-top" alt="Cartilla 3">
                <div class="card-body">
                    <h5 class="card-title">¿Deseas dejar algún comentario? ¡Te escuchamos!</h5>
                    <p class="card-text">Recuerda que cuentas con el apartado de Cóntactanos para cualquier inquietud o queja que se le presente.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Banner interactivo con imagen flotante -->
    <div class="container mt-4 text-center position-relative d-inline-block">

        <!-- Banner estático -->
        <img src="~/img/donkey-kong-banner-index.png"
             alt="Imagen no encontrada"
             class="banner-img rounded-4 shadow-lg">
             <br />
        <!-- Imagen flotante encima -->
        <a href="@Url.Action("Index", "Productos")" class="floating-link">
            <img src="~/img/banana-key.png"
                 alt="Imagen no encontrada"
                 class="floating-img">
        </a>

    </div>

    <br />

    <!-- Texto de descuentos -->
    <div class="text-center mt-5 mb-4">
        <h3>¡No te pierdas de nuestros últimos descuentos!</h3>
        <p>Aprovecha las nuevas ofertas y descubre nuevas aventuras que te puedan interesar</p>
    </div>


    <!-- Tabla de descuentos -->
    <div class="container mt-5">
        <h3 class="text-center mb-4">🔥 Últimas Ofertas 🔥</h3>
        <div class="table-responsive">
            <table class="table table-bordered text-center align-middle shadow-lg">
                <thead class="table-dark">
                    <tr>
                        <th>Juegos</th>
                        <th>Antes</th>
                        <th>Ahora</th>
                        <th>Descuento</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <img src="~/img/productos/minecraft.jpg" alt="Imagen no encontrada" class="game-img">
                            <p class="mt-2">Minecraft (PC)</p>
                        </td>
                        <td><span class="old-price">S/ 165.00</span></td>
                        <td><span class="new-price">S/. 122.50</span></td>
                        <td><span class="badge bg-success">25% OFF</span></td>
                    </tr>
                    <tr>
                        <td>
                            <img src="~/img/productos/tlou2.jpg" alt="Imagen no encontrada" class="game-img">
                            <p class="mt-2">The Last Of Us (Ps5)</p>
                        </td>
                        <td><span class="old-price">S/. 159.00</span></td>
                        <td><span class="new-price">S/. 127.20</span></td>
                        <td><span class="badge bg-success">20% OFF</span></td>
                    </tr>
                    <tr>
                        <td>
                            <img src="~/img/productos/elden_ring.jpg" alt="imagen no encontrada" class="game-img">
                            <p class="mt-2">Elden Ring (PC)</p>
                        </td>
                        <td><span class="old-price">S/.175</span></td>
                        <td><span class="new-price">S/.130</span></td>
                        <td><span class="badge bg-success">25% OFF</span></td>
                    </tr>
                    <tr>
                        <td>
                            <img src="~/img/accesorios/logitech-435.jpg" alt="imagen no encontrada" class="game-img">
                            <p class="mt-2">Auriculares Logitech G-435</p>
                        </td>
                        <td><span class="old-price">S/.299</span></td>
                        <td><span class="new-price">S/.225</span></td>
                        <td><span class="badge bg-success">25% OFF</span></td>
                    </tr>
                    <tr>
                        <td>
                            <img src="~/img/accesorios/doom-marine.jpg" alt="imagen no encontrada" class="game-img">
                            <p class="mt-2">Funko POP Space Marine GS Exclusivo</p>
                        </td>
                        <td><span class="old-price">S/.155</span></td>
                        <td><span class="new-price">S/.75</span></td>
                        <td><span class="badge bg-success">50% OFF</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="container mt-4 text-center position-relative d-inline-block">

        <!-- Banner estático -->
        <img src="~/img/banner-add.jpeg"
             alt="Imagen no encontrada"
             class="banner-img rounded-4 shadow-lg">
        <br />

    </div>


    <div class="text-center mt-4 mb-4" style="color:whitesmoke">
        <h3>No te pierdas de lo nuevo que Funko tiene para ti.</h3>
    </div>

    <div id="funkoCarousel" class="carousel slide mx-auto" data-bs-ride="carousel" style="max-width:750px; height:700px; overflow:hidden; border-radius:1rem; box-shadow:0 4px 15px rgba(0,0,0,0.4);">
        <div class="carousel-inner" style="height:100%;">
            <div class="carousel-item active" style="height:100%;">
                <img src="~/img/ps-addon.jpg" class="d-block w-100" alt="Imagen no encontrada" style="height:100%; object-fit:cover; border-radius:1rem;">
            </div>
            <div class="carousel-item" style="height:100%;">
                <img src="~/img/funko-addon-3.jpg" class="d-block w-100" alt="Imagen no encontrada" style="height:100%; object-fit:cover; border-radius:1rem;">
            </div>
            <div class="carousel-item" style="height:100%;">
                <img src="~/img/funko-addon-5.png" class="d-block w-100" alt="Imagen no encontrada" style="height:100%; object-fit:cover; border-radius:1rem;">
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#funkoCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" style="background-color:rgba(0,0,0,0.5); border-radius:50%;"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#funkoCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" style="background-color:rgba(0,0,0,0.5); border-radius:50%;"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>

</div>

<br />
<br />


<style>
    /* Limitar altura del carrusel y ajustar imagen */
    .carousel-img {
        max-height: 400px; /* Ajusta según tu preferencia */
        object-fit: cover; /* La imagen se recorta manteniendo proporción */
        width: 100%;
    }

    .game-img {
        width: 100px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        transition: transform 0.3s ease;
    }

        .game-img:hover {
            transform: scale(1.1);
        }

    /* Precios tachados y destacados */
    .old-price {
        text-decoration: line-through;
        color: #b0b0b0;
        font-weight: bold;
    }

    .new-price {
        color: #e63946;
        font-size: 1.2rem;
        font-weight: bold;
    }
</style>
