@{
    ViewData["Title"] = "GameStop - Nosotros";
    Layout = "~/Views/Shared/LayoutMaster.cshtml";
}

<!-- CSS de Leaflet -->
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
<!-- JS de Leaflet -->
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<h2 class="text-center mt-4">Nuestra Experiencia</h2>

<div class="row justify-content-center mt-4">
    @{
        var experiencias = new List<string>
        {
        "Más de 10 años ofreciendo los mejores productos para cada uno de nuestros consumidores.",
        "Contamos con personal especializado en el ambito gamer para ayudarte a escoger los mejores videojuegos.",
        "¡Abrimos nuevas sedes! No te pierdas de actividades y regalos únicos para nuevos clientes."
        };
    }

    @foreach (var exp in experiencias)
    {
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p class="card-text">@exp</p>
                </div>
            </div>
        </div>
    }
</div>

<!-- Banner con GIF animado -->
<div class="banner-gif position-relative text-center mb-5">
    <img src="~/img/banner-gs.jpg" alt="Imagen no encontrada" class="img-fluid rounded-4 shadow" />
    <div class="banner-text position-absolute top-50 start-50 translate-middle text-white">
        <h1 class="fw-bold display-5">Explora el mundo Gamer</h1>
        <p class="fs-5">GameStop Perú - Donde comienza la aventura</p>
    </div>
</div>


<div class="container mt-5">
    <div class="p-4 rounded-4 shadow-lg" style="background-color: #343a40; color: white;">
        <div class="row">
            <!-- Botones a la izquierda -->
            <div class="col-md-3 d-flex flex-column align-items-start p-3">
                <h4 class="mb-4 fw-bold text-white">Nuestras Tiendas</h4>

                <button class="btn btn-outline-light mb-3 w-100" onclick="centrarMapa(-12.0865, -77.0901, 'CC Plaza - San Miguel')">San Miguel</button>
                <button class="btn btn-outline-light mb-3 w-100" onclick="centrarMapa(-12.1134, -76.9883, 'Jockey Plaza - Surco')">Surco</button>
                <button class="btn btn-outline-light mb-3 w-100" onclick="centrarMapa(-11.9941, -77.0610, 'MegaPlaza - Independencia')">Independencia</button>
                <button class="btn btn-outline-light mb-3 w-100" onclick="centrarMapa(-12.0464, -77.0301, 'Real Plaza Centro Cívico - Lima')">Lima Centro</button>
                <button class="btn btn-outline-light mb-3 w-100" onclick="centrarMapa(-12.0862, -77.0419, 'Real Plaza Salaverry - Jesús María')">Jesús María</button>
            </div>

            <!-- Mapa a la derecha -->
            <div class="col-md-9">
                <div id="mapa" class="rounded-3" style="width: 100%; height: 500px;"></div>
            </div>
        </div>
    </div>
</div>


<div class="container mt-5">
    <h3 class="text-center mb-4 fw-bold">Visita Nuestras Nuevas Sedes</h3>

    <div class="cartas-aperturas">
        <!-- Cartilla : San Miguel -->
        <div class="card shadow-sm">
            <img src="~/img/sanmiguel-cc.jpg" class="card-img-top" alt="Imagen no encontrada">
            <div class="card-body">
                <h5 class="card-title text-danger">CC Plaza - San Miguel</h5>
                <p class="card-text">Visita nuestra sede en el centro comerical de San Miguel.</p>
                <p class="card-text"><strong>Hora de Apertura:</strong> De 08:00 am a 11:15 pm</p>
            </div>
        </div>

        <!-- Cartilla : Surco -->
        <div class="card shadow-sm">
            <img src="~/img/jp-surco.jpg" class="card-img-top" alt="Imagen no encontrada">
            <div class="card-body">
                <h5 class="card-title text-danger">Jockey Plaza - Surco</h5>
                <p class="card-text">Visitanos en la sede de JP en Surco, ¡actividades los fin de semanas!</p>
                <p class="card-text"><strong>Hora de Apertura:</strong> De 08:00 am a 00:00 am</p>
            </div>
        </div>

        <!-- Cartilla : Independencia -->
        <div class="card shadow-sm">
            <img src="~/img/mp-independencia.jpg" class="card-img-top" alt="Imagen no encontrada">
            <div class="card-body">
                <h5 class="card-title text-danger">Mega Plaza - Independencia</h5>
                <p class="card-text">¡No te pierdas de nuestras nuevas sedes que abrimos para ti! Obsequios a primeros clientes.</p>
                <p class="card-text"><strong>Hora de Apertura:</strong> De 08:00 am a 22:00 pm</p>
            </div>
        </div>

        <!-- Cartilla : Lima Centro -->
        <div class="card shadow-sm">
            <img src="~/img/rp-civico.jpg" class="card-img-top" alt="Larcomar Miraflores">
            <div class="card-body">
                <h5 class="card-title text-danger">Real Plaza - Lima Centro</h5>
                <p class="card-text">Expandimos nuestras fronteras, ahora te esperamos en Real Plaza para que consigas tus juegos preferidos cerca de ti.</p>
                <p class="card-text"><strong>Hora de Apertura:</strong> De 08:00 am a 23:00 pm </p>
            </div>
        </div>

        <!-- Cartilla : Jesus Maria -->
        <div class="card shadow-sm">
            <img src="~/img/rp-salaverry.jpg" class="card-img-top" alt="Larcomar Miraflores">
            <div class="card-body">
                <h5 class="card-title text-danger">Larcomar - Miraflores</h5>
                <p class="card-text">Visitanos en la sede de Jesus Maria, ofrecemos recuerdos a nuestros primeros visitantes.</p>
                <p class="card-text"><strong>Hora de Apertura:</strong> De 09:00 am a 22:45 pm</p>
            </div>
        </div>
    </div>
</div>




<script>
    let mapa = L.map('mapa').setView([-12.0865, -77.0901], 15); // CC Plaza - San Miguel

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; OpenStreetMap contributors'
    }).addTo(mapa);

    let marcador = L.marker([-12.0865, -77.0901]).addTo(mapa)
        .bindPopup('CC Plaza - San Miguel')
        .openPopup();


    function centrarMapa(lat, lng, titulo) {
        mapa.setView([lat, lng], 16);
        marcador.setLatLng([lat, lng])
                .setPopupContent(titulo)
                .openPopup();
    }
</script>

<style>
    /* --- Banner --- */
    .banner-gif {
        overflow: hidden;
        height: 350px;
    }

        .banner-gif img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: brightness(70%);
        }

    .banner-text {
        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.8);
    }

    /* --- Cartillas centradas --- */
    .cartas-aperturas {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
    }

        .cartas-aperturas .card {
            max-width: 300px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .cartas-aperturas .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
            }
</style>

