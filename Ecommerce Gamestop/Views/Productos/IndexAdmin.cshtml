@model IEnumerable<Productos>
@{
    ViewData["Title"] = "GameStop - Productos Administración";
    Layout = "~/Views/Shared/LayoutMaster.cshtml";
}

<h2>Gestión de Productos</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="text-end mb-3">
    <a asp-action="Crear" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nuevo Producto
    </a>
</div>

<table class="table table-striped table-hover align-middle shadow-sm">
    <thead class="table-dark">
    <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Tipo</th>
        <th>Estado</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>$@item.Precio</td>
            <td>@item.TipoProducto</td>
            <td>@item.Estado</td>
            <td>
                <a href="@Url.Action("Editar", new { id = item.ProductoID })" class="btn btn-warning">Editar</a>

                    <form asp-action="Eliminar" asp-route-id="@item.ProductoID" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('¿Está seguro de eliminar este producto?');">
                            Eliminar
                        </button>
                    </form>
            </td>
        </tr>
    }
    </tbody>
</table>

